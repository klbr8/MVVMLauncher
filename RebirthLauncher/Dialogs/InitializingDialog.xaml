<!-- RebirthLauncher/Dialogs/InitializingDialog.xaml -->
<Window
    x:Class="RebirthLauncher.Dialogs.InitializingDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Launcher Setup"
    SizeToContent="WidthAndHeight"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    MinWidth="480"
    MinHeight="160"
    ShowInTaskbar="False">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Select or enter the install folder for game clients" 
                   FontWeight="SemiBold" FontSize="14" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" >
            <TextBox
                x:Name="InstallPathTextBox"
                Width="360"
                VerticalAlignment="Center"
                Text="{Binding InstallPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                Margin="0,0,8,0"/>
            <Button
                Content="Browse..."
                Command="{Binding BrowseCommand}"
                VerticalAlignment="Center"
                MinWidth="80"/>
        </StackPanel>

        <TextBlock Grid.Row="4" Text="The launcher will create the folder if it does not exist."
                   FontSize="11" Foreground="Gray" Margin="0,6,0,8"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK"
                    Width="90"
                    Margin="0,0,8,0"
                    IsDefault="True"
                    Command="{Binding OkCommand}"
                    IsEnabled="{Binding CanOk}"/>
            <Button Content="Cancel"
                    Width="90"
                    IsCancel="True"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
