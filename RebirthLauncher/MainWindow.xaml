<Window x:Class="RebirthLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RebirthLauncher"        
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="1080" Width="1920">

    <!--<Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>-->

    <!--<Window.TaskbarItemInfo>        
        <TaskbarItemInfo ProgressValue="{Binding UpdateManager.Coordinator.OverallProgress, Mode=OneWay}" />
    </Window.TaskbarItemInfo>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="{Binding ScreenWidthFifth}" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" MinWidth="{Binding ScreenWidthFifth}" />
        </Grid.ColumnDefinitions>

        <Image Grid.RowSpan="3" Grid.ColumnSpan="3" Stretch="UniformToFill"/>
         <!--      Source="{Binding ServerList.SelectedServer.BackgroundPath, Converter={StaticResource UrlToBitmapImageConverter}}" -->

        <Rectangle Grid.RowSpan="3"  />
        <Rectangle Grid.Column="2" Grid.RowSpan="3" />

        <ListBox Grid.Row="1" Grid.RowSpan="2" Background="Transparent" Foreground="Yellow" FontSize="24"
                 ItemsSource="{Binding ServerList.Servers}"
                 SelectedItem="{Binding ServerList.SelectedServer, Mode=TwoWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <Image Height="100" Width="100"
                                /> <!--Source="{Binding IconPath, Converter={StaticResource UrlToBitmapImageConverter}}"-->
                        <Grid Width="250">
                            <!-- Bind to Coordinator.OverallProgress -->
                            <ProgressBar Value="{Binding DataContext.UpdateManager.Coordinator.OverallProgress, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,0,0,0" />
                            <TextBlock Text="{Binding ServerName}" VerticalAlignment="Center"
                                       Foreground="Yellow" FontSize="20" Margin="8,0,0,0"
                                       TextAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="{Binding ActionButtonContent}"
                IsEnabled="{Binding IsActionButtonEnabled}"
                Style="{StaticResource RoundEndRadiusStyle}"
                Command=""
                FontSize="28" FontWeight="Bold"
                Margin="50,50,50,0"
                MinWidth="150"
                Padding="10,1,10,1"
                Height="60"
                VerticalAlignment="Top"
                Grid.Row="2"
                Grid.Column="2" />

        <Grid Grid.Column="1" Grid.Row="2">
            <ItemsControl ItemsSource="{Binding DownloadsViewModel}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ProgressBar Value="{Binding ProgressPercentage}"
                                     Maximum="100"
                                     Height="8"
                                     Margin="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
